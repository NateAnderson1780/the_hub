<h1><%= @team.name %> Roster</h1>

<div class="roster">
  <table class="table">
    <thead>
      <tr>
        <th>Name<th>
        <th>Birthdate<th>
        <th>Height<th>
        <th>Weight<th>
        <th>Position<th>
        <th>Jersey Number<th>
        <th>Years Experience<th>
        <th>College<th>
      </tr>
    </thead>
    <tbody>
      <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.birthdate %></td>
        <td><%= player.height %></td>
        <td><%= player.weight %></td>
        <td><%= player.position %></td>
        <td><%= player.jersey_number %></td>
        <td><%= player.experience %></td>
        <td><%= player.college %></td>
      <tr>
      <% end %>
    </tbody>
  </table>
</div>
