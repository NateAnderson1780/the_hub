<h1>Your Teams</h1>

<%= form_for(:userteam, url: userteams_path) do |f| %>
  <select name="team_id">
    <%= @teams.each do |team| %>
      <option value="<%= team.id %>" class="<%= team.name %>"><%= team.name %></option>
    <% end %>
  </select>
  <%= f.submit "Add Team" %>
<% end %></br></br>


<div class = "row">
  <% @userteams.each do |userteam| %>
   <div class = "col-sm-6 col-md-3">
      <a href = "#" class = "thumbnail">
         <%= image_tag userteam.image, alt: 'logo' %>
      </a>
     <div class="container">
        <%= link_to "Roster", roster_path(userteam.id) %>
        <%= link_to "Injuries", injury_path(userteam.id) %>
        <%= link_to "Standings", standings_path(userteam.id) %>
        <%= link_to "Schedule", schedules_path(userteam.id) %></br></br>
        <%= link_to "Delete Team", userteam_path(userteam), :method => :delete %>
     </div>
   </div>
  <% end %>
</div>
